<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.*?> 
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" prefWidth="1024" prefHeight="700">
	<HBox alignment="CENTER" spacing="20" fx:id="menubar">
		<padding>
			<Insets top="5" bottom="5"/>
	    </padding>
		<fx:define>
	        <ToggleGroup fx:id="toggleGroup"/>
	    </fx:define>
		<ToggleButton fx:id="consoleToggleButton" text="Console" toggleGroup="$toggleGroup" disable="true" prefHeight="30" prefWidth="200" />
		<ToggleButton fx:id="connectionToggleButton" text="Connections" toggleGroup="$toggleGroup" selected="true" prefHeight="30" prefWidth="200" />
	</HBox>
	<StackPane VBox.vgrow="ALWAYS">
		<TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" tabMinWidth="150" tabMinHeight="25" side="TOP" visible="${consoleToggleButton.selected}" managed="${consoleToggleButton.selected}" />
		<StackPane fx:id="connection" visible="${connectionToggleButton.selected}" managed="${connectionToggleButton.selected}" />
		<VBox fx:id="progressIndicator" visible="false" managed="false" alignment="CENTER">
			<ProgressIndicator />
		</VBox>
	</StackPane>
	<VBox fx:id="notificationBar" fillWidth="false" alignment="CENTER" prefHeight="35" />
</fx:root>
