<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.*?> 
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" stylesheets="/css/application.css" prefWidth="1024" prefHeight="768">
	<HBox alignment="CENTER" spacing="20" fx:id="menubar">
		<padding>
			<Insets top="5" bottom="5"/>
	    </padding>
		<fx:define>
	        <ToggleGroup fx:id="toggleGroup"/>
	    </fx:define>
		<ToggleButton fx:id="consoleToggleButton" text="Console" toggleGroup="$toggleGroup" prefHeight="30" prefWidth="200" />
		<ToggleButton fx:id="connectionToggleButton" text="Connection" toggleGroup="$toggleGroup" selected="true" prefHeight="30" prefWidth="200" />
	</HBox>
	<StackPane VBox.vgrow="ALWAYS" fx:id="console" visible="${consoleToggleButton.selected}" managed="${consoleToggleButton.selected}">
    	<TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" tabMinWidth="150" tabMinHeight="25" side="TOP">
		</TabPane>
		<Group>
			<ProgressIndicator fx:id="progressIndicator" visible="false" managed="false" />
		</Group>
	</StackPane>
	<VBox fx:id="connection" visible="${connectionToggleButton.selected}" managed="${connectionToggleButton.selected}">
	</VBox>
</fx:root>
